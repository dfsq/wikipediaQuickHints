{
	"manifest_version": 2,
	"name": "Wikipedia Quick Hints",
	"description": "Display quick description of the terms in the Wikipedia article.",
	"version": "2.15",
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [{
		"js": ["wikipediaQuickHints.js"],
		"css": ["hint.css"],
		"matches": ["http://*.wikipedia.org/wiki/*"],
		"run_at": "document_idle"
	}],
	"icons": {
		"128": "img/128.png",
		"16": "img/16.png",
		"48": "img/48.png"
	},
	"page_action": {
		"default_icon": "img/16.png",
		"default_popup": "popup.html",
		"default_title": "Quick hints are available"
	},
	"permissions": [
		"tabs",
		"http://commons.wikimedia.org/",
		"http://upload.wikimedia.org/"
	],
	"web_accessible_resources": [
		"img/star.png",
		"img/star_inactive.png",
		"img/read.png",
		"img/zoom.gif"
	]
}
